<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_weight=".5">

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fortificationButton"
                android:src="@drawable/default"
                android:background="@null"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"/>

        <TextView
                android:text="00:00"
                android:id="@+id/gameTimer"
                style="@style/game_timer"
                android:layout_height="wrap_content"
                android:textSize="60dp"
                android:layout_gravity="center_vertical"/>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/roshButton"
                android:src="@drawable/roshan"
                android:background="@null"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <view
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            class="com.johnwelsh.dotatimers.views.TimelineView"
            android:id="@+id/view"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginBottom="5dp">

        <ImageButton
                android:id="@+id/hero1"
                android:src="@drawable/default"
                style="@style/hero_portrait_buttons"/>

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/hero2"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal|bottom"
                android:src="@drawable/default"
                android:focusable="false"
                style="@style/hero_portrait_buttons"/>

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/hero3"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal|bottom"
                android:src="@drawable/default"
                style="@style/hero_portrait_buttons"/>

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/hero4"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal|bottom"
                android:src="@drawable/default"
                style="@style/hero_portrait_buttons"/>

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/hero5"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal|bottom"
                android:src="@drawable/default"
                style="@style/hero_portrait_buttons"/>
    </LinearLayout>
</LinearLayout>